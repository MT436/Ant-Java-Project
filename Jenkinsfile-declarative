//Declarative way
pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                set -x
		echo "My Branch Name: ${BRANCH_NAME}"
                bat 'ant -f */build-mt.xml'
	    }
	}
    }
	
	post {
        success {
          emailext(
	   subject: "${env.JOB_NAME} [${env.BUILD_NUMBER}] Successfull",
           body: "${env.JOB_NAME} [${env.BUILD_NUMBER}] ${env.BUILD_URL}",
		  to: "${env.DEFAULT_RECIPIENTS},mthejesh24@gmail.com"
          )
        }
	failure{
	   emailext(
	   subject: "${env.JOB_NAME} [${env.BUILD_NUMBER}] Failed",
           body: "${env.JOB_NAME} [${env.BUILD_NUMBER}] ${env.BUILD_URL}",
		   to: "${env.DEFAULT_RECIPIENTS},mthejesh24@gmail.com"
            )		   
		}
      }
	
}
